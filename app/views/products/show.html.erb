<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

<% if current_user %>

    <div class="row">
      <div class="col-sm-7 col-sm-offset-5">
      <%= form_for [@product, Review.new] do |form| %>

        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= select_tag :rating, options_for_select([nil,1,2,3,4,5]) %>

          <%= form.submit 'Rate', class: 'btn btn-primary' %>
        </div>

      <% end %>
    </div>
    </div>

<% end %>

    <div class="row">
      <div class="col-sm-8 col-sm-offset-4">
      <% @reviews.each do |review| %>
      <% username = User.find(review.user_id).first_name + " " + User.find(review.user_id).last_name %>
        <dl class="dl-horizontal">
          <dt><%= review.rating %></dt>
          <dd><%=  username %></dd>
          <dd><%= review.description %></dd>

      <% if review.user_id == current_user.id %>
          <dd>
            <%= link_to fa_icon('trash'), [@product, review], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %></dd>
      <% end %>

        </dl>

      <% end %>
      </div>
    </div>

    </div>

  </article>

</section>
